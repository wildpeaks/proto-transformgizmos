PROTO Debug [
	exposedField  SFColor     color     0 0 0
	exposedField  SFRotation  rotation  0 0 1 0
	field         SFFloat     height    2
]{
	Transform {
		rotation IS	rotation
		children [
			Transform {
				translation	0 1 0
				children Shape {
					appearance Appearance {
						material Material {
							diffuseColor 0 0 0
							emissiveColor IS color
						}
					}
					geometry Cylinder {
						radius 0.005
						height IS height
					}
				}
			}
		]
	}
}


